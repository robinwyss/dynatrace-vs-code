{
  "name": "dynatrace",
  "displayName": "Dynatrace",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dynatrace",
          "title": "Dynatrace",
          "icon": "resources/security-white.svg"
        }
      ]
    },
    "views": {
      "dynatrace":[
        { 
          "id": "thid-party-vulnerabilities",
          "name": "Third-Party Vulnerabilities"
        },
        { 
          "id": "runtime-vulnerabilities",
          "name": "Runtime Vulnerabilities"
        },
        { 
          "id": "code-level-vulnerabilities",
          "name": "Code-Level Vulnerabilities"
        }
      ]
    },
    "configuration": {
      "title": "Dynatrace",
      "properties": {
        "dynatrace.tenantUrl": {
          "type": "string",
          "default": "",
          "description": "The url of your Dynatrace tenant"
        },
        "dynatrace.filter": {
          "type": "string",
          "default": "",
          "description": "Specify a filter for the security problems, see the documentation for possible values: https://www.dynatrace.com/support/help/shortlink/api-v2-security-problems-get-all"
        },
        "dynatrace.showVulnerabilityCount": {
          "type": "boolean",
          "default": "false",
          "description": "Shows the number of vulnerabilities in the status bar (will prompt you for an API Token, requires securityProblems.read scope)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.1"
  }
}
