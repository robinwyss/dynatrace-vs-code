{
  "name": "dynatrace",
  "displayName": "Dynatrace",
  "description": "",
  "version": "0.1.0",
  "repository": "https://github.com/robinwyss/dynatrace-vs-code",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dynatrace",
          "title": "Dynatrace",
          "icon": "resources/security-white.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "vulnerabilities.reload",
        "title": "Reload",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "vulnerability.details",
        "title": "Details",
        "icon": "$(info)"
      },
      {
        "command": "vulnerability.detailsExternal",
        "title": "View in Dynatrace",
        "icon": "$(link-external)"
      },
      {
        "command": "vulnerability.open",
        "title": "Open",
        "icon": "$(code)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vulnerabilities.reload",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vulnerability.details",
          "group": "inline"
        },
        {
          "command": "vulnerability.detailsExternal",
          "group": "inline"
        },
        {
          "command": "vulnerability.open",
          "group": "inline"
        }
      ]
    },
    "views": {
      "dynatrace": [
        {
          "id": "thid-party-vulnerabilities",
          "name": "Third-Party Vulnerabilities"
        },
        {
          "id": "runtime-vulnerabilities",
          "name": "Runtime Vulnerabilities"
        },
        {
          "id": "code-level-vulnerabilities",
          "name": "Code-Level Vulnerabilities"
        }
      ]
    },
    "configuration": {
      "title": "Dynatrace",
      "properties": {
        "dynatrace.tenantUrl": {
          "type": "string",
          "default": "",
          "description": "The url of your Dynatrace tenant",
          "order": 1
        },
        "dynatrace.token": {
          "type": "string",
          "default": "",
          "description": "API Token",
          "order": 2
        },
        "dynatrace.filterType": {
          "type": "string",
          "default": "None",
          "enum": [
            "None",
            "Selector",
            "Management Zone",
            "Tag",
            "Workload"
          ],
          "description": "Specify a filter for the security problems, see the documentation for possible values: https://www.dynatrace.com/support/help/shortlink/api-v2-security-problems-get-all",
          "order": 3
        },
        "dynatrace.filter": {
          "type": "string",
          "default": "",
          "description": "Specify a filter for the security problems, value depends on the selected filter type",
          "order": 4
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.1"
  }
}